<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'detalleProducto'}) %>


<body>
    <%- include('partials/header') %>
    <div class="container mt-3 padding-cont-detalle">
        <div class="row">
                <iframe class="col-8 detalle-juego" height="470px" src="https://www.youtube.com/embed/<%=productoDetalle.video%>" frameborder="0" allowfullscreen></iframe>
            <section class="col-4 detalle-juego">
                <div>
                    <img class="imagen-detalle col-12 mb-5" src="/img/<%= productoDetalle.imagen_detalle %>" alt="">
                </div>
                <h3 class="col-12"><%= productoDetalle.description %></p>
                    <div class="col-12">
                        <h1 class="h1-detalle-precio"><i class="fas fa-star mb-2 rating"></i> <%= productoDetalle.rating %></h1>
                    </div>
                    <p class="col mt-3 precio"><%= productoDetalle.price %>$</p>
                    <div class="botones-administrador">
                        <button class="detail--action-button"><a href="/product/edit/<%= productoDetalle.id %>">EDITAR PRODUCTO</a></button>
                        <form action="/product/delete/?_method=delete" method="POST" style="display: inline-flex">
                        <button type="submit" class="detail--action-button">ELIMINAR</button>
                        </form>
                    </div>
            </section>
        <div class=" contenedor-principal col-8 mb-5 detalle-juego">
            <button role="button" id="flecha-derecha" class="flecha-izquierda"><i
                    class="fas fa-angle-right"></i></button>
            <div class="contenedor-carrusel detalle-juego">
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image1 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image2 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image3 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image4 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image5 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image6 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image7 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image8 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image9 %>" alt="imagen-gameplay"></div>
                <div class="imagen-gameplay"><img src="../../img/<%= productoDetalle.image10 %>" alt="imagen-gameplay"></div>
            </div>
            <button role="button" id="flecha-izquierda" class="flecha-derecha"> <i
                    class="fas fa-angle-left"></i></button>
            </div>
            <div class="compra col-4">
                <div>
                    <i class="fab fa-xbox icono-xbox"></i>
                    <i class="fab fa-playstation icono-playstation"></i>
                    <i class="fas fa-desktop icono-desktop"></i>
                </div>
                <div>
                    <a href="/user/cart" class="carrito-contenedor-link"><i
                            class="fas fa-shopping-cart shoping-cart-detalle" aria-hidden="true"></i></a>
                    <a href="#" class="btn btn-primary btn-lg">Comprar</a>
                </div>
        </div>
        </div>
        <div class="row especificaciones ">
            <span class="span-detail col-3">Sobre el juego</span>
            <section class="row col-9">
                <div class="col-4">
                    <span class="span-detail informacion">Desarrolladora:</span>
                    <p><%= productoDetalle.Desarrolladora %></p>
                </div>
                <div class="col-4">
                    <span class="span-detail informacion">Editora:</span>
                    <p> <%= productoDetalle.Editora %></p>
                </div>
                <div class="col-4">
                    <span class="span-detail informacion">Fecha de lanzamiento:</span>
                    <p> <%= productoDetalle.Lanzamiento %>6</p>
                </div>
                <div class="col-4">
                    <span class="span-detail informacion">Etiquetas:</span>
                    <p> <%= productoDetalle.Etiquetas %></p>
                </div>
                <div class="col-4">
                    <span class="span-detail informacion">Clasificacion:</span>
                    <p> <%= productoDetalle.Clasificacion %></p>
                </div>
                <div class="texto-container">
                    <h1 class="h1-detalle col-12"><%= productoDetalle.title %></h1>
                    <div class="texto-informativo col-12 ">
                        <%= productoDetalle.big_description %>
                    </div>
                    <br>
                    <div class="texto-informativo col-12 ">
                        <%= productoDetalle.medium_description %>
                    </div>
            </section>

            <div>
            </div>
            <span class="span-detail col-3">Otros juegos</span>
        </div>

